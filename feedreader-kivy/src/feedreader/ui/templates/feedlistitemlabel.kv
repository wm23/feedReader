#:kivy 1.0

<FeedListItemLabel>:
    size_hint_y: None
    height: '100dp'
    color: (0,0,0,1)
    selected_color: (0.8, 0.8, 0.8, 1)
    deselected_color: (1, 1, 1, 1)
    state_color: self.selected_color if self.is_selected else self.deselected_color

    BoxLayout:
        orientation: 'horizontal'
        AsyncImage:
            source: root.image
            size_hint_x: None
            size_hint_y: None
            width: root.height*2
            height: root.height-10
        Label:
            color: (0,0,0,1)
            text: '[b]' + root.title + '[/b]\n\n' + root.text
            markup: True
            halign: 'left'
            valign: 'top'
            text_size: self.size