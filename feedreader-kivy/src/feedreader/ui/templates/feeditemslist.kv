#:kivy 1.0

#: import DictAdapter kivy.adapters.dictadapter.DictAdapter
#: import ListItemLabel kivy.uix.listview.ListItemLabel

#: import FeedItemsList feedreader.ui.feeditemslist.FeedItemsList
#: import FeedListItemLabel feedreader.ui.feedlistitemlabel.FeedListItemLabel

#: include feedreader/ui/templates/feedlistitemlabel.kv


<FeedItemsList>:
    args_converter: lambda row_index, rec: {'text': rec['summary'], 'title': rec['title'], 'image': rec['image'], 'cls_dicts': []}
    canvas.before:
        Color:
            rgba: (1,1,1,1)
        Rectangle:
            pos: self.pos
            size: self.size
    ListView:
        adapter: DictAdapter(sorted_keys=root.order, data=root.data, args_converter=root.args_converter, selection_mode='single', allow_empty_selection=False, cls = FeedListItemLabel)
